   "source": [
    "def is_palindrome(text):\n",
    "    clean = ''.join(c.lower() for c in text if c.isalnum())\n",
    "    return clean == clean[::-1]\n",
    "\n",
    "# Test cases\n",
    "print(is_palindrome(\"Madam\"))             # True\n",
    "print(is_palindrome(\"Race car!\"))         # True\n",
    "print(is_palindrome(\"Hello\"))             # False\n"
   ]
